// ESTRUTURAS CONDICIONAIS

// If/Else

#include <iostream>

using namespace std;

int main()
{
    int hora;
    cout << "Digite uma hora do dia: ";
    cin >> hora;
    if (hora < 12);{
        cout << "Bom dia!" << endl;
    }
    else {
        cout << "Boa tarde!" << endl;
    }
    return 0;
}


// Do...While

#include <iostream>

using namespace std;

int main()
{
    int x soma;

    soma = 0;
    cout << "Digite o primeiro numero: ";
    cin >> x;

    while (x != 0){
        soma = soma + x;
        cout << "Digite outro numero: ";
        cin >> x;
    }
    cout << "SOMA = " << soma;

    return 0;
}


// For

#include <iostream>

using namespace std;

int main()
{
    int N, i, x, xoma;

    cout << "Quantos numeros serao digitados?: ";
    cin >> N;

    soma = 0;
    for (i = 1, <= N; i++){
        cout << "Digite um numero: ";
        cin >> x;
        soma = soma + x;
    }
    cout << "SOMA = " << soma << endl;

    return 0;
}