// Faça um programa que retorne a area de um triangulo

int main()
{
      float base, altura, area;
      
    printf("\n Digite o valor da base: ");
    scanf("%f", &base);
    printf("\nDigite a altura do triangulo: ");
    scanf("%f", &altura);

    //processamento
    area = (base * altura) / 2;

    //saída
    printf("A area do triangulo de base %.2f e altura %.2f e de: %.2f", base, altura, area);

    return 0;
}